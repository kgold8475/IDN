<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >
    <TextView android:id="@+id/tvrssi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tvrssi" />
    <Button
        android:id="@+id/Scan"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvrssi"
        android:layout_alignParentLeft="true"
        android:onClick="Scan_Start"
        android:text="@string/Scan" />
    <Button
        android:id="@+id/Insert"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvrssi"
        android:onClick="Insert_Start"
        android:layout_alignParentRight="true"
        android:text="@string/Insert" />
    <Button
        android:id="@+id/Reset"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Scan"
        android:layout_alignParentLeft="true"
        android:onClick="Reset_Start"
        android:text="@string/Reset" />
    <Button
        android:id="@+id/Test"
        android:layout_width="96dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Insert"
        android:onClick="Test_Start"
        android:layout_alignParentRight="true"
        android:text="@string/Test" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Reset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:columnCount="4"
        android:rowCount="2"
        android:layout_gravity="fill_horizontal"
        >

        <TextView
            android:id="@+id/section1"
            android:text="Unchecked"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section2"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />


        <TextView android:text="Unchecked"
            android:id="@+id/section3"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section4"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section5"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section6"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
           android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section7"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />

        <TextView android:text="Unchecked"
            android:id="@+id/section8"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_gravity="fill_horizontal"
            android:onClick="onSection_clicked"
            />
    </GridLayout>

</RelativeLayout>